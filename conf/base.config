/*
Resource management
*/

process {

    // error strategy
    errorStrategy = { task.attempt < 3 ? 'retry' : 'finish' }
    maxRetries = 3

    // basic resources
    cpus = 1
    time = { 1.h * task.attempt }
    memory = { 1.GB * task.attempt }

    // process-specific resources
    withName: BOWTIE_BUILD_INDEX {
        cpus = 12
        memory = { 20.GB * task.attempt }
        time = { 4.h * task.attempt }
    }
    withName: TRIM_GALORE {
        cpus = 8
        memory = { 16.GB * task.attempt }
        time = { 4.h * task.attempt }
    }
    withName: BOWTIE_ALIGN {
        cpus = 10
        memory = { 32.GB * task.attempt }
        time = { 8.h * task.attempt }
    }
    withName: MACS2_CALL_PEAKS {
        cpus = 1
        memory = { 4.GB * task.attempt }
        time = { 4.h * task.attempt }
    }
    withName: BEDTOOLS_INTERSECT_REPLICATES {

    }
    withName: CLUSTERSCAN_CLUSTER_IS {

    }
    withName: BEDTOOLS_INTERSECT_REPLICATES {

    }
    withName: BEDTOOLS_FILTER_IS {

    }
    withName: DEEPTOOLS_GENERATE_BIGWIG {

    }
    withName: OVELAP_SAMPLES {
    
    }
}

timeline {
	enabled = true
}

report {
	enabled = true
}
